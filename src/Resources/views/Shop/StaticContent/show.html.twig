{% extends '@SyliusShop/layout.html.twig' %}

{% block metatags %}
    {% if resource.metaKeywords is not empty %}
        <meta name="keywords" content="{{ resource.metaKeywords }}" />
    {% endif %}
    {% if resource.metaDescription is not empty %}
        <meta name="description" content="{{ resource.metaDescription }}" />
    {% endif %}
{% endblock %}

{% block content %}
    <div class="ui breadcrumb">
        <a href="{{ path('sylius_shop_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a>
        <div class="divider"> / </div>
        <div class="active section">{{ resource.title }}</div>
    </div>

    <div class="ui segment">
        <h1 class="ui dividing header">{{ resource.title }}</h1>

        <div>{{ resource.body }}</div>
    </div>
{% endblock %}
